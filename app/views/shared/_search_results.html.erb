<h1>Search Results</h1>

<% if @search.present? %>
  <p>Showing results for: <%= @search.query %></p>
  <% if @search.persisted? %>
    <!-- Display the search results here -->
    <ul>
      <% @results.each do |result| %>
        <li><%= result %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No results found.</p>
  <% end %>
<% end %>

